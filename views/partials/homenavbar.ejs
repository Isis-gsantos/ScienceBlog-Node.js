<%- include ('header.ejs') %>

<body>
    <header class="home">
        <nav class="home-navbar">
            <a href="/"><h1>ScienceBlog</h1></a>
            <button class="hamburguer-menu"></button>

            <ul class="nav-list">
                <% categories.forEach(category => { %>
                    <li>
                        <a href="/category/<%= category.slug %>"><%= category.title %></a>
                    </li>
                <% }) %>

                <% if (!user) { %> 
                    <li><a href="/login"><i class="fa-solid fa-arrow-right-to-bracket"></i>Login</a></li>
                <% } else { %>  
                    <li><a href="#"><i class="fa-solid fa-user"></i>Profile</a></li>
                    <li><a href="/logout"><i class="fa-solid fa-arrow-right-to-bracket"></i>Logout</a></li>
                <% } %>
            </ul>
        </nav>
        
        <div class="intro-text">
            <h2>At ScienceBlog, we dive deep into the world of science, unraveling mysteries, analyzing innovations, and inspiring curiosity about our world and beyond</h2>
        </div>
    </header>
</body>

<%- include ('footer.ejs') %>

<script>
    const hamburguer = document.querySelector(".hamburguer-menu");
    const nav = document.querySelector(".home-navbar");

    hamburguer.addEventListener("click", () => {
        nav.classList.toggle("active");
    });

</script>